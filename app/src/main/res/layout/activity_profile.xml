<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:background="?android:selectableItemBackground"
        android:drawableTop="@drawable/back"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="167dp" />

    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/adhiphoto" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewAll0"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:background="?android:selectableItemBackground"
        android:text="Change photo"
        android:textColor="#818181"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPhoto"
        tools:layout_editor_absoluteX="144dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Satria Adhi Pradana"
        app:layout_constraintTop_toBottomOf="@+id/viewAll0"
        tools:layout_editor_absoluteX="132dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSignIn"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/bluebutton"
        android:drawableLeft="@drawable/upload"
        android:fontFamily="@font/montserrat"
        android:paddingLeft="52dp"
        android:paddingRight="79dp"
        android:text="Upload item"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.035" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonTradeStore"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Trade store"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignIn"
        app:layout_constraintVertical_bias="0.002" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPaymentMethon"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Payment method"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTradeStore"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBalance"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Balance"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPaymentMethon"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonTradeHistory"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Trade history"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBalance"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRestorePurchase"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Restore Purchase"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTradeHistory"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonHelp"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Help"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRestorePurchase"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogOut"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="?android:selectableItemBackground"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/arrowright"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center_vertical"
        android:paddingRight="5dp"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHelp"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Menu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="50dp"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/menuhome"
                android:paddingStart="8dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/buttonHealth"
                tools:layout_editor_absoluteY="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonHealth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="50dp"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/menuhealth"
                android:paddingStart="8dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/buttonCart"
                tools:layout_editor_absoluteY="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/menucart"
                android:paddingStart="8dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMessage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:background="?android:selectableItemBackground"
                android:drawableLeft="@drawable/menumessage"
                android:paddingStart="8dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/buttonCart"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/bncategory"
                android:drawableLeft="@drawable/menuprofile"
                android:paddingStart="8dp"
                android:paddingLeft="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/buttonMessage"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>